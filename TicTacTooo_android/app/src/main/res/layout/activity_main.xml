<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dani.tictactooo.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/restartbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="447dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/startbtn"
            android:layout_alignStart="@+id/startbtn" />

        <Button
            android:id="@+id/refreshbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hit refresh"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="447dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/startbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:onClick="clickbtn"
            android:text="start" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/btn4"
            android:layout_toLeftOf="@+id/btn4"
            android:layout_toStartOf="@+id/btn4"
            android:text="R" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="T" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/btn4"
            android:layout_alignTop="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:layout_toRightOf="@+id/btn4" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_above="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:layout_toRightOf="@+id/btn4"
            android:text="A" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_above="@+id/btn3"
            android:layout_alignLeft="@+id/btn3"
            android:layout_alignStart="@+id/btn3"
            android:text="S" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btn3"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/btn0"
            android:layout_alignBottom="@+id/btn0"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:text="T" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btn5"
            android:layout_toEndOf="@+id/btn7"
            android:layout_toRightOf="@+id/btn7" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/btn7"
            android:layout_alignBottom="@+id/btn7"
            android:layout_alignLeft="@+id/btn3"
            android:layout_alignStart="@+id/btn3" />

        <TextView
            android:id="@+id/p2id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_below="@+id/startbtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <EditText
            android:id="@+id/p1id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_above="@+id/p2id"
            android:layout_alignLeft="@+id/p2id"
            android:layout_alignStart="@+id/p2id" />

        <TextView
            android:id="@+id/error1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="57dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/playerid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/error1"
            android:layout_alignRight="@+id/error1"
            android:layout_below="@+id/btn7"
            android:text="Player:" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
